{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PUIUX Agent Output",
  "description": "Standard output format for all PUIUX agents",
  "type": "object",
  "required": ["status", "result", "metadata"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "blocked", "failed"],
      "description": "Execution status"
    },
    "result": {
      "type": "object",
      "required": ["summary", "deliverables", "decisions"],
      "properties": {
        "summary": {
          "type": "string",
          "description": "Brief summary of work completed",
          "minLength": 10
        },
        "deliverables": {
          "type": "object",
          "description": "Map of deliverable_name -> filename (all files must exist)",
          "patternProperties": {
            "^[a-z][a-z0-9_-]*$": {
              "type": "string",
              "pattern": "^[a-z0-9][a-z0-9_.-]+\\.(md|json|yaml|yml|txt|pdf|png|jpg|jpeg)$"
            }
          }
        },
        "decisions": {
          "type": "array",
          "description": "Key decisions made during execution",
          "items": {
            "type": "string",
            "minLength": 5
          }
        },
        "issues": {
          "type": "array",
          "description": "Problems encountered",
          "items": {
            "type": "object",
            "required": ["severity", "description"],
            "properties": {
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              },
              "description": {
                "type": "string",
                "minLength": 10
              },
              "recommendation": {
                "type": "string"
              }
            }
          }
        },
        "next_steps": {
          "type": "array",
          "description": "Recommended next actions",
          "items": {
            "type": "string",
            "minLength": 5
          }
        },
        "consolidated": {
          "type": "object",
          "description": "Coordinator-specific consolidated data (only for coordinator-agent)",
          "properties": {
            "total_deliverables": {
              "type": "number",
              "minimum": 0
            },
            "deliverables_by_agent": {
              "type": "object",
              "description": "Count of deliverables per agent"
            },
            "total_decisions": {
              "type": "number",
              "minimum": 0
            },
            "total_issues": {
              "type": "number",
              "minimum": 0
            },
            "total_actions": {
              "type": "number",
              "minimum": 0
            },
            "conflicts": {
              "type": "number",
              "minimum": 0
            },
            "all_deliverables": {
              "type": "array",
              "description": "All deliverables from all agents",
              "items": {
                "type": "object",
                "required": ["agent", "key", "file", "exists"],
                "properties": {
                  "agent": {
                    "type": "string",
                    "description": "Agent that produced this deliverable"
                  },
                  "key": {
                    "type": "string",
                    "description": "Deliverable key name"
                  },
                  "file": {
                    "type": "string",
                    "description": "Filename"
                  },
                  "exists": {
                    "type": "boolean",
                    "description": "Whether file exists on disk"
                  }
                }
              }
            },
            "action_items": {
              "type": "array",
              "description": "Action items with standardized structure",
              "items": {
                "type": "object",
                "required": ["id", "owner", "severity", "title", "source", "next_step"],
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^[A-Z0-9]+-AI-[0-9]{3}$",
                    "description": "Action item ID (e.g., S2-AI-001)"
                  },
                  "owner": {
                    "type": "string",
                    "description": "Agent or team responsible"
                  },
                  "severity": {
                    "type": "string",
                    "enum": ["low", "medium", "high", "critical"],
                    "description": "Severity level"
                  },
                  "title": {
                    "type": "string",
                    "minLength": 10,
                    "description": "Action item title/description"
                  },
                  "source": {
                    "type": "string",
                    "description": "Where this action item came from"
                  },
                  "evidence": {
                    "type": "string",
                    "description": "Evidence or context for this action"
                  },
                  "next_step": {
                    "type": "string",
                    "minLength": 5,
                    "description": "Recommended next step to resolve"
                  }
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["agent", "client", "stage", "timestamp"],
      "properties": {
        "agent": {
          "type": "string",
          "description": "Agent identifier"
        },
        "client": {
          "type": "string",
          "description": "Client slug"
        },
        "stage": {
          "type": "string",
          "pattern": "^(PS[0-5]|S[0-5])$"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "duration_ms": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "tokens_used": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "cost_usd": {
      "type": ["number", "null"],
      "minimum": 0
    }
  }
}
