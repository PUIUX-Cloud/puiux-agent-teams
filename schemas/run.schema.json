{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PUIUX Agent Teams - Run Manifest Schema",
  "type": "object",
  "required": ["run_id", "client", "stage", "status", "timestamp"],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "client": {
      "type": "string"
    },
    "client_name": {
      "type": "string"
    },
    "stage": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["success", "failed", "blocked"]
    },
    "timestamp": {
      "type": "string"
    },
    "reason": {
      "type": "string"
    },
    "commercial_message": {
      "type": "string"
    },
    "missing_gates": {
      "type": "array"
    },
    "gates_state": {
      "type": "object"
    },
    "artifacts": {
      "type": "array"
    },
    "agents": {
      "type": "array"
    },
    "gates": {
      "type": "object"
    },
    "metrics": {
      "type": "object"
    }
  }
}
